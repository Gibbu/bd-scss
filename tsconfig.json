{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"outDir": "./lib",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "Node16",
		"verbatimModuleSyntax": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "lib"]
}
